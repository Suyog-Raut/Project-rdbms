<div class="page-wrapper bg-purple p-t-100 p-b-100 font-robo">
    <div class="wrapper wrapper--w680">
        <div class="card card-1">
            <div class="card-heading"><img class="image" src="img/truck2.jpg"></div>
            <div class="card-body">
                <h2 class="title">Book Vehicle</h2>
                <form action="/book" method="POST">
                    <div class="input-group">
                        <input class="input--style-1" type="text" placeholder="NAME" name="name">
                    </div>
                    <div class="input-group">
                        <input class="input--style-1" type="text" placeholder="ADDRESS" name="address">
                    </div>
                    <div class="input-group">
                        <input class="input--style-1" type="tel" placeholder="MOBILE NO." name="mobile">
                    </div>
                    <div class="input-group">
