
<h3>{{viewTitle}}</h3>
<style>
  label {
    font-size: 20px;
    font-weight: normal;
    margin-top: 15px;
  }
</style>
<form action="/consignment" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{bill._id}}">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="name" placeholder="Enter Name" value="{{bill.name}}">
    </div>
    <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control" name="address" placeholder="Address" value="{{bill.address}}">
    </div>
    <div class="form-group">
        <label>Mobile No.</label>
        <input type="text" class="form-control" name="mobile" placeholder="Mobile No." value="{{bill.mobile}}">
        <!-- <div class="text-danger">
            {{employee.fullNameError}}</div>
    </div> -->
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{bill.email}}">
        <!-- <div class="text-danger">
            {{employee.emailError}}</div>
    </div> -->
     <div class="form-group col-md-6">
        <label>Sender</label>
        <input type="text" class="form-control" name="Sender" placeholder="Sender" value="{{bill.sender}}">
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Receiver</label>
            <input type="text" class="form-control" name="Receiver" placeholder="Receiver" value="{{bill.receiver}}">
        </div>
        <div class="form-group">
            <label>Sender's Address</label>
            <input type="text" class="form-control" name="Source_Branch" placeholder="Source_Branch" value="{{bill.sourceBranch}}">
        </div>
        <div class="form-group">
            <label>Receiver's Address</label>
            <input type="text" class="form-control" name="Destination_Branch" placeholder="Destination_Branch" value="{{bill.destinationBranch}}">
        </div>
        <div class="form-group">
            <label>Weight</label>
            <input type="text" class="form-control" name="Weight" placeholder="Weight" value="{{bill.weight}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info" onclick="return confirm('Confirm the Consignment Order ?');"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/consignment/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>
